<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StoryApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink_500</item>
        <item name="colorOnPrimary">@color/pink_50</item>
        <item name="colorOnPrimaryContainer">@color/black</item>
        <item name="colorPrimaryContainer">@color/pink_200</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_800</item>
        <item name="colorOnSecondary">@color/gray_100</item>
        <item name="colorSecondaryContainer">@color/gray_400</item>
        <item name="colorOnSecondaryContainer">@color/gray_900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="header">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">48sp</item>
    </style>
    <style name="subheader">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">26sp</item>
    </style>
    <style name="subheaderOnContainer">
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <item name="android:textSize">26sp</item>
    </style>
    <style name="descriptionOnContainer">
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">?attr/colorPrimaryContainer</item>
    </style>
    <style name="description">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="textContainer">
        <item name="android:background">?attr/colorPrimaryContainer</item>
    </style>
    <style name="progressBar">
        <item name="android:tint">?attr/colorSecondary</item>
    </style>
    <style name="button">
        <item name="android:backgroundTint">?attr/colorPrimaryContainer</item>
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="noStyle">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme.StoryApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.StoryApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>